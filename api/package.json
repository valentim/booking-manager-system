{
  "name": "booking-manager-system",
  "version": "1.0.0",
  "description": "It is a simple booking manager system written in nodejs with koajs",
  "main": "index.js",
  "author": "Thiago Valentim",
  "license": "AGPL-3.0-or-later",
  "repository": "valentim/booking-manager-system",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/src/index.js",
    "test": "ts-mocha -p tsconfig.json tests/**/*.spec.ts",
    "build": "npm run build-ts && npm run tslint",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/src/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "aws-sdk": "^2.814.0",
    "joi": "^14.3.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-route": "^3.2.0",
    "koa-router": "^8.0.8",
    "moment-timezone": "^0.5.28",
    "mongoose": "^5.9.2"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/chai": "^4.2.9",
    "@types/joi": "^14.3.4",
    "@types/koa": "^2.11.2",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-route": "^3.2.4",
    "@types/koa-router": "^7.4.0",
    "@types/koa__cors": "^3.0.1",
    "@types/mocha": "^7.0.1",
    "@types/moment-timezone": "^0.5.12",
    "@types/mongoose": "^5.7.2",
    "@types/sinon": "^7.5.2",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "sinon": "^9.0.0",
    "ts-mocha": "^6.0.0",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2"
  }
}
